{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container-md mt-5 pt-5">
        <div class="row">
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img class="img-fluid rounded-left " alt="contact" src="{{ asset('/assets/img/contact-blog-img.png') }}" />
            </div>
            <div class="col-md-6">
                <div class="mail_section">
                    <h2 class="text-center">Get in touch</h2>
                    <input type="text" class="form-control my-2" placeholder="Votre nom" name="name">
                    <input type="text" class="form-control my-2" placeholder="Votre téléphone" name="phone">
                    <input type="email" class="form-control my-2" placeholder="Votre email" name="email">
                    <textarea class="form-control my-2" placeholder="Votre message" rows="5" id="message" name="message"></textarea>
                    <div class="btn btn-outline-primary mt-3"><a href="#">Envoyer</a></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}