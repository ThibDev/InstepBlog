{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}
    <div class="container-md mt-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-8">
                <h2>Les articles</h2>
            </div>
            <div class="col-md-4">
                <a class="btn btn-primary mx-5" href="{{ path('admin_articles_create') }}">Ajouter un thème</a>
            </div>
        </div>
        <section class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Titre</th>
                        <th scope="col" class="text-center">Description</th>
                        <th scope="col" class="text-center">Illustration</th>
                        <th scope="col" class="text-center">Slug</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td class="text-center">{{ article.title|capitalize }}</td>
                            <td class="text-center">{{ article.content|capitalize }}</td>
                            <td class="text-center">{{ article.illustration|capitalize }}</td>
                            <td class="text-center">{{ article.slug|capitalize }}</td>
                            <td>
                                <div class="center">
                                    <div class="mx-2">
                                        <a class="btn btn-warning" href="{{ path('admin_articles_edit', {'slug' : article.slug}) }}"><i class="fas fa-edit mr-1"></i>Éditer</a>
                                    </div>
                                    <div class="mx-2">
                                        <a class="btn btn-danger" onclick="confirm('Supprimer le thème ?')" href="{{ path('admin_articles_delete', {'slug' : article.slug}) }}"><i class="fas fa-trash mr-1"></i>Supprimer</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
{% endblock %}