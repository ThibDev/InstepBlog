{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container-md mt-5">
    <h2>Le dernier article</h2>
    {% for last_article in last_articles %}
    <article class="my-5">
        <img class="w-100 img-fluid rounded-5" alt="{{ last_article.title }}" src="{{ asset('uploads/article/illustration/'~last_article.illustration) }}" />
        <p class="mt-5">Posté le : {{ last_article.createdAt|date('d-m-Y') }}</p>
        <h2 class="text-center">{{ last_article.title|capitalize }}</h2>
        <p>{{ last_article.content|capitalize|u.truncate(150, '...') }}</p>
        <a class="btn btn-outline-primary" href="{{ path('blog_show', {'slug': last_article.slug}) }}">Voir en détail</a>
    </article>
    {% endfor %}
</div>
{% endblock %}